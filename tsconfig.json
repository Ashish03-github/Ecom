{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": [],
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/features/": ["./src/features"],
      "@/common/": ["./src/features"],
      "@/constants/": ["./src/constants"],
      "@/navigation/": ["./src/navigation"],
      "@/services/": ["./src/services"],
      "@/store/": ["./src/store"],
      "@/theme/": ["./src/theme"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
